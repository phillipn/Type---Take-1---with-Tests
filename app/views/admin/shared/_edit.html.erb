<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @article.id && current_user.admin? %>
    <%= form_tag('/admin/content/merge') do %>
        <h3> Merge Similar Articles</h3>
        <label_for='merge_with'>Article ID</label>
        <input type='text' name='merge_with' id='merge_with'/>
        <%= hidden_field_tag('article_id', @article.id) %> <br>
        <input type='submit' name='commit' class='btn danger' value='Merge'/>
    <% end %>
<% end %>


